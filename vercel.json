{
  "version": 2,
  "builds": [
    {
      "src": "user-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "admin-dashboard/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/admin/(.*)",
      "destination": "/admin-dashboard/admin.html"
    },
    {
      "source": "/(.*)", 
      "destination": "/user-frontend/index.html"
    }
  ]
}