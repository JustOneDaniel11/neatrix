{
  "version": 2,
  "builds": [
    {
      "src": "user-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "admin-dashboard/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin-login",
      "dest": "/admin-dashboard/dist/admin.html"
    },
    {
      "src": "/reset-password",
      "dest": "/admin-dashboard/dist/admin.html"
    },
    {
      "src": "/admin/assets/(.*)",
      "dest": "/admin-dashboard/dist/assets/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/user-frontend/dist/assets/$1"
    },
    {
      "src": "/(Neatrix_logo_transparent.png|Neatrix_logo_transparent_white.png|robots.txt|placeholder.svg)",
      "dest": "/user-frontend/dist/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/user-frontend/dist/images/$1"
    },
    {
      "src": "/admin/.*",
      "dest": "/admin-dashboard/dist/admin.html"
    },
    {
      "src": "/(.*)",
      "dest": "/user-frontend/dist/index.html"
    }
  ]
}