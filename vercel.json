{
  "version": 3,
  "builds": [
    {
      "src": "user-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "admin-dashboard/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin/.*",
      "dest": "/admin-dashboard/admin.html"
    },
    {
      "src": "/.*", 
      "dest": "/user-frontend/index.html"
    }
  ]
}